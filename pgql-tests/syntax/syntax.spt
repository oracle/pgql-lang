module syntax

language pgql-lang

test Case insensitivity [[
sElEcT mAx(n.age), MiN(n.age), sUm(n.age)
WhErE
  (n), TrUe Or FaLsE And n.married
gRoUp By n.name
OrDeR bY AvG(n.age)
lImIt 1
]]

test Edges [[
SELECT *
FROM MATCH (n) -> () -[e1]-> () -[e2 IS knows]-> (),
     MATCH (n) <- () <-[e3]- () <-[e4:knows]- ()
]]

test Strings [[

  SELECT *
  FROM MATCH (n1) -> (n2)
  WHERE n1.name = 'Single quotes \'\' and double quotes "" or \"\"' AND
        n2.nam3 = "Single quotes '' or \'\' and double quotes \"\""

]]

test Numeric [[

  SELECT *
   FROM MATCH (n)
  WHERE n.age = 25 AND n.age > -25 AND n.age = 25.0 AND n.age > -25.0

]]


tests Label expression with IS [[

  SELECT *
  FROM MATCH (n IS Person) -[IS knows]-> (IS Person) -[e IS knows]-> (m)

]]

tests Label expression with mixed IS and : [[

  SELECT *
  FROM MATCH (n IS Person) -[:knows]-> (:Person) -[e IS knows]-> (m)

]]
